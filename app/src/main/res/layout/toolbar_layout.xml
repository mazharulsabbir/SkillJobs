<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appBarLayoutTop"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:elevation="0dp"
    android:layout_gravity="center_horizontal"
    android:background="#fff">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
        app:contentScrim="#fff"
        app:expandedTitleGravity="bottom"
        app:expandedTitleTextAppearance="@style/CollapsingToolbarLayoutExpandedTextStyle"
        app:layout_scrollFlags="enterAlways|snap|scroll"
        app:title="Course Details">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:contentDescription="Skill Jobs Company Logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/skill_jobs_toolbar_logo_small" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/ToolbarOverlayTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_collapseMode="pin" />

    </com.google.android.material.appbar.CollapsingToolbarLayout>

</com.google.android.material.appbar.AppBarLayout>
