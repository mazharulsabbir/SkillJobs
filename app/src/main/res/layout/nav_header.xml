<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:gravity="bottom|center_horizontal">
    <ImageView
        android:id="@+id/pro_cover_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/cover"/>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/nav_profile_image"
        android:layout_width="85dp"
        android:layout_height="76dp"
        android:layout_alignStart="@+id/pro_cover_photo"
        android:layout_alignTop="@+id/pro_cover_photo"
        android:layout_alignEnd="@+id/pro_cover_photo"
        android:layout_alignBottom="@+id/pro_cover_photo"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="@+id/pro_cover_photo"
        app:layout_constraintEnd_toEndOf="@+id/pro_cover_photo"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="@+id/pro_cover_photo"
        app:layout_constraintTop_toTopOf="@+id/pro_cover_photo"
        app:layout_constraintVertical_bias="0.838" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_profile_image"
        android:layout_alignBottom="@+id/pro_cover_photo"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="@dimen/large_text"
        app:layout_constraintBottom_toBottomOf="@+id/nav_profile_image"
        app:layout_constraintStart_toEndOf="@+id/nav_profile_image"
        app:layout_constraintTop_toTopOf="@+id/nav_profile_image"
        app:layout_constraintVertical_bias="1.0" />




</androidx.constraintlayout.widget.ConstraintLayout>