<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>

        <item name="android:windowActivityTransitions" tools:ignore="NewApi">true</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>

    </style>

    <style name="ToolbarOverlayTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

</resources>
